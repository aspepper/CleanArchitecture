<div class="row mt-2">
    <div class="col-12 ">
        <div class="row mt-3">
            <div class="col-12 px-0 ">
                <label class="letter">Risco Ambiental <img src="./assets/socio/FolhaVermelha.svg"></label>
            </div>
            <hr class="mt-2 hr">
        </div>
        <div class="row">
            <div class="col-12">
                <table class="">
                    <thead class="panel">
                        <tr class="">
                            <th></th>
                            <th class="descricao">Descrição</th>
                            <th class="descricao">Risco</th>
                            <th class="descricao">Justificação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var risco in AmbientalPaginado.Items)
                        {
                            <tr>
                                <td><i class="fa-regular fa-pen-to-square" style="color: #16a232;"></i></td>
                                <td class="letter-small">@risco.Descricao</td>
                                <td class="letter ">
                                    @if (risco.RiscoTipo == "positivo")
                                    {
                                        <img src="./assets/socio/folhavetor (2).svg">
                                    }
                                    else if (risco.RiscoTipo == "negativo")
                                    {
                                        <img src="./assets/socio/FolhaVermelha.svg">
                                    }
                                    else if (risco.RiscoTipo == "Analise")
                                    {
                                        <img src="./assets/socio/FolhaAmarela.svg">
                                    }
                                    else if (risco.RiscoTipo == "atencao")
                                    {
                                        <img src="./assets/socio/FolhaLaranja.svg">
                                    }
                                </td>
                                <td class="letter-small">@risco.Justificacao <img src="./assets/socio/Visualizar.svg"></td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="mt-5">
                    <nav class="space" aria-label="Navegação de página exemplo">
                        <ul class="pagination pagination-sm">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Anterior">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Anterior</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <li class="page-item @(i == AmbientalPaginado.PageIndex ? "active" : "")"><a class="page-link" href="#">@i</a></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Próximo">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Próximo</span>
                                </a>
                            </li>
