<div class="row mt-2">
    <div class="col-12">
        <div class="borda">
            <label class="letter-table">Participações Societárias e Coligadas  </label>
        </div>
    </div>
    <table class="tamanho">
        <thead class="">
            <tr class="">
                <th></th>
                <th class="letter">Nome</th>
                <th class="letter text-center">Relacionamento</th>
                <th class="letter text-center">Atividade Econômica</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var participacao in Coligada)
            {
                <tr>
                    <td><i class="fa-regular fa-pen-to-square" style="color: #16a232;"></i></td>
                    <td class="letter-tabela">@participacao.Nome</td>
                    <td class="letter-tabela text-center">@participacao.Relacionamento</td>
                    <td class="letter-tabela text-center">@participacao.AtividadeEconomica</td>
                </tr>
            }
        </tbody>
    </table>
</div>
