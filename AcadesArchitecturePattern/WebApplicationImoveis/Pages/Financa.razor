    </div>
    <div class="col-6">
        <div class="borda">
            <label class="letter ">Sócio/Administradores</label>
        </div>
        <table class="tamanho">
            <thead class="panel">
                <tr>
                    <th></th>
                    <th class="letter">Nome</th>
                    <th class="letter text-center">Documento</th>
                    <th class="letter text-center">Tipo</th>
                    <th class="letter text-center">Particip.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var socio in Adminis)
                {
                    <tr>
                        <td><i class="fa-regular fa-pen-to-square" style="color: #16a232;"></i></td>
                        <td class="letter-tabela">@socio.Nome</td>
                        <td class="letter-tabela text-center">@socio.Documento</td>
                        <td class="letter-tabela text-center">@socio.Tipo</td>
                        <td class="letter-tabela text-center">@socio.Particip.ToString("0'%", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))</td>
                    </tr>

                }

            </tbody>
        </table>
